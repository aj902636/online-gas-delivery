<body class="hold-transition login-page">
<div class="login-box">
    <div class="login-logo">
        <!--<a href="../../index2.html"><b>Admin</b>LTE</a>-->
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <!--<p class="login-box-msg">Sign in to start your session</p>-->

        {{#if messages.success }}
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <i class="icon fa fa-check"></i>{{ messages.success }}
            </div>

        {{/if}}
        {{#if messages.error }}
            <div class="alert alert-error">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <i class="icon fa fa-close"></i> {{ messages.error }}
            </div>
        {{/if}}
        <div class="login-logo" style="align-content: center" align="center">
            <img src="/images/logo.jpg"  class="img-responsive"/>
        </div>

        <form action="/login" method="post">
            <div class="form-group has-feedback">
                <input type="text" id="username" name="username" class="form-control" placeholder="Username">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" id="password" name="password" class="form-control" placeholder="Password">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <a href="/register">Register Vender</a><br>
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Log me in</button>
                </div>
                <!-- /.col -->
            </div>
        </form>

    </div>
    <!-- /.login-box-body -->
</div>
<!-- /.login-box -->

<!-- jQuery 3 -->
<script src="../../bower_components/jquery/dist/jquery.min.js"></script>
<!-- Bootstrap 3.3.7 -->
<script src="../../bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- iCheck -->
<script src="../../plugins/iCheck/icheck.min.js"></script>
<script type="application/javascript">
    jQuery(document).ready(function() {
        window.setTimeout("fadeMyDiv();", 3000); //call fade in 3 seconds
    });
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        });
    });
    function fadeMyDiv() {
        jQuery(".alert-success").fadeOut('slow');
        jQuery(".alert-error").fadeOut('slow');
        jQuery(".alert-info").fadeOut('slow');
    }
</script>
</body>