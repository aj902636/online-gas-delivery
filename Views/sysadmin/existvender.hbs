{{> sysAdminHeader }}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
               Existing New Vendor
                <small>Existing Vendor Listing</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">existing vendor</li>
            </ol>
            {{#if messages.success }}
                <div class="alert alert-success">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <i class="icon fa fa-check"></i>{{ messages.success }}
                </div>

            {{/if}}
            {{#if messages.error }}
                <div class="alert alert-error">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <i class="icon fa fa-close"></i> {{ messages.error }}
                </div>
            {{/if}}
        </section>

        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box  box-danger">
                        <div class="box-header">
                            <h3 class="box-title"></h3>
                            <!--<span class="pull-right"><button class="btn btn-success btn-sm"  data-toggle="modal" data-target="#handover"><i class="fa fa-plus"></i>&nbsp;&nbsp;New Sub-Admin</button> </span>-->
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                <tr>
                                    <th width="5">S/N</th>
                                    <th>UserName</th>
                                    <th>Email</th>
                                    <th>mobile Number</th>
                                    <!--<th>Profile Image</th>-->
                                    <th>Status</th>
                                    <th  width="55">Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {{#each enduser}}
                                   <tr>
                                       <td>{{math @index "+" 1}}</td>
                                       <td>{{ username }}</td>
                                       <!--<td><img src="/" style="height: 55px; width: 55px" /></td>-->
                                       <td>{{ email }}</td>
                                       <td>{{ phoneNumber }} </td>
                                       <!--<td><img src="/" style="height: 55px; width: 55px" /></td>-->
                                       <td style="text-align: right;font-weight: bold">
                                           {{#compare status  1 operator="=="}}
                                               <span class="label label-success label-small">Active</span>
                                           {{ else }}
                                               <span class="label label-warning">Not Active</span>
                                           {{/compare}}
                                       </td>
                                       <td>
                                           <div class="btn-group">
                                               <!--<a href="#" class="btn btn-info btn-sm"><i class="fa fa-pencil"></i></a>-->
                                               <!--<a href="#" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></a>-->
                                               <button type="button" class="btn btn-sm btn-info" data-toggle="modal" data-target="#editCategory"  onclick="editSubAdmin('{{ _id }}')"><i class="fa fa-pencil"></i></button>
                                               <button class="btn btn-danger btn-sm" type="button" data-toggle="modal" onclick="DeleteVendor('{{ username  }}','{{ _id }}')" data-target="#CategoryDelete"><i class="fa fa-trash"></i></button>

                                           </div>
                                       </td>
                                   </tr>
                               {{/each}}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
        </section>
        <div class="modal fade" id="handover">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                   <form method="post" action="/sub-admin" autocomplete="off" enctype="multipart/form-data">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">New Sub-Admin</h4>
                    </div>
                    <div class="modal-body">
                        <div class="box-body" id="TabletoAdd">
                            <div class="row">
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">First Name</label>
                                        <input type="text" cols="1" required rows="1" class="form-control" name="first_name"  placeholder="First Name">
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Last Name</label>
                                        <input type="text" cols="1" required rows="1" class="form-control" name="last_name"  placeholder="Last Name">
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Email</label>
                                        <input type="email" cols="1" required rows="1" class="form-control" name="email"  placeholder="Email">
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Mobile Number</label>
                                        <input type="text" class="form-control mobile_number" required name="mobile_number" maxlength="10" placeholder="Mobile Number">
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Profile Image</label>
                                        <input type="file" class="form-control" value="" name="file" placeholder="Profile Image">
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Status</label>
                                    <select class="form-control" name="status">
                                        <option value="0">Active</option>
                                        <option value="1">Inactive</option>
                                    </select>
                                </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                        <!--<button class="btn btn-info" id="addRow" type="button">Add</button>-->
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                    </form>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <div class="additions" id="additions" style="display: none">
            <div class="row">
                <div class="col-sm-2">
                    <select class="form-control" required name="categoryId[]" onchange="">
                        <option value=""> -- Chagua Aina --</option>
                        {{#each cat}}
                            <option value="{{ _id }}">{{ name }}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <textarea type="text" cols="1" required rows="1" class="form-control" name="tangazo[]"  placeholder="Tangazo"></textarea>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <input type="text" class="form-control date" name="tarehe[]" placeholder="Tarehe">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <input type="text" class="form-control" value="" name="muhusika[]"  placeholder="Muhusika ">
                    </div>
                </div>
                <div class="col-sm-2">
                        <div class="input-group">
                            <select class="form-control"  name="priority[]" onchange="">
                                <option value="0">Kawaida</option>
                                <option value="1">Sana</option>
                                <option value="2">Sana Mno</option>
                            </select>
                            <span class="input-group-btn">
                                <button class="btn btn-danger" type="button" id="removerow"><i class="fa fa-close"></i></button>
                            </span>
                        </div>

                </div>
            </div>

        </div>
        <!-- /.content -->
    </div>

