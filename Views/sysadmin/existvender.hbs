<script type="application/javascript">
    $(document).ready(function(){
        $('.mobile_number').keyup(function (event) {
            // skip for arrow keys
            if (event.which >= 37 && event.which <= 40) return;
            // format number
            $(this).val(function (index, value) {
                return value.replace(/\D/g, "");
            });
        });
    });

    $(document).ready(function () {
        $("#TabletoAdd").on('click','#removerow',function(){
            $(this).parent().parent().parent().parent().remove();
        });
        $("#addRow").click(function(){
            var response = $('#additions').html();
            $('#TabletoAdd').append(response).slideDown('slow');
            $(".date").datepicker({
                maxDate:0,
                dateFormat: "yy-mm-dd",
            }).datepicker("setDate", new Date());
        });
        $('.sidebar-menu').tree()

        $(".date").datepicker({
            maxDate:0,
            dateFormat: "yy-mm-dd",
        }).datepicker("setDate", new Date());
    });

    function editSubAdmin(argument) {
       // alert(argument)
        $.ajax({
            url: "/sysadmin/ajaxEditUser",
            data : { userid : argument },
            type: "GET",
            contentType: "application/json",
            dataType: "json",
            success: function(response) {
                $("#id").val(response._id);
               // $("#first_name").val(response.firstName);
                $("#username").val(response.username);
                $("#mobile_number").val(response.phoneNumber);
                $("#email").val(response.email          );
                //$("#priority").val(response.priority);
            },
            error: function(xhr, ajaxOptions, thrownError) {
                $("#id").val("");
              //  $("#first_name").val("");
                $("#username").val("");
                $("#mobile_number").val("");
                $("#email").val("");                                                                                        
            }
        });
    }

    function DeleteVendor(argument,argument2){
        jQuery("#jinalamuumini").html(argument);
        jQuery("#nameyaMuumini").html(argument);
        jQuery("#vendor_id").val(argument2);
    }
</script>
