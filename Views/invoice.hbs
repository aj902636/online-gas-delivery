{{> header }}

<style type="text/css">
    .amount{
        background: #656565 none repeat scroll 0 0;
        color: #fff;
        font-family: "Abel",sans-serif;
        font-size: 48px;
        padding: 10px 30px;
    }
    .total-purchase {
        color: #2b2b2c;
        font-size: 16px;
        font-weight: bold;
        margin-bottom: 10px;
        text-transform: uppercase;
    }
    strong {
    font-weight: 700;
}
</style>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Booking Gas
                <small>Invoice</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Invoice</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <!-- Small boxes (Stat box) -->
            <div class="row">
                <div class="col-xs-4">
                    <div class="invoice-logo">
                            <!--<img src="../images/logo.png" height="60" alt=""/>-->
                    </div>
                </div>
                <div class="col-xs-4">
                    <h1>invoice</h1>
                </div>
                <div class="col-xs-4">
                    <div class="total-purchase">
                        Total Revenue
                    </div>
                    
                        <div class="amount">{{bookingList.amount}} INR</div>
                    </div>
                </div><br/><br/><br/>
                <div class="row">
                    <div class="col-xs-4">
                        <address>
                            <strong>OFFICE ADDRESS</strong>
                            <br>Online gas delivery<br>
                            onlinegas@gmail.com
                        </address>
                    </div>
                    <div class="col-xs-4">
                        <strong>TO</strong>
                        <br/>{{bookingList.address}}
                        <br/>Mobile Number: {{bookingList.insertby.phoneNumber}}
                        <br/>
                    </div>
                    <div class="col-xs-4 inv-info">
                        <strong>INVOICE INFO</strong>
                        <br/> <span> Invoice Number : </span>1111000102037773
                        <br/><span> Invoice Date : </span>	2020-12-02
                        <br/> <span> Invoice Status : </span>	Success
                    </div>
                </div><br/><br/><br/>

                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>S_No.</th>
                        <th>Registration No </th>
                        <th class="">Amount</th>
                        <th class="">Service Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>1</td>
                        <td>{{bookingList.registrationid}}</td>
                        <td class="">{{bookingList.amount}}</td>
                        <td class="">2020-12-02</td>
                    </tr>
                   
                    </tbody>
                </table><br/><br/>

                <div class="row">
                    <div class="col-xs-8">
                        <h4>PAYMENT METHOD</h4>
                        <ul class="list-unstyled">
                            <li>Online</li>
                        </ul>
                    </div>
                    <div class="col-xs-4">
                        <table class="table table-hover">
                            <tbody>
                            <tr>
                                <td>Subtotal</td>
                                <td>{{bookingList.amount}} INR</td>
                            </tr>
                            <tr>
                                <td>Tax</td>
                                <td>0.00</td>
                            </tr>
                            <tr>
                                <td>Discount</td>
                                <td>0.00</td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>GRAND TOTAL</strong>
                                </td>
                                <td><strong>{{formatCurrency bookingList.amount}} INR</strong></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div><br/><br/><br/>

                <div class="row">
                    <div class="col-md-12">
                        <div class="pull-left">
                            <a class="btn btn-danger" onclick="javascript:window.print();" target="_blank"><i class="fa fa-print"></i> Print</a>
                            <!--<a href="#" class="btn btn-success">Generate PDF</a>-->
                        </div>
                        <div class="pull-right">
                            <!-- <a href="#" class="btn btn-success">Submit Payment</a>-->
                        </div> 
                    </div>

                </div>

            </div>
            <!-- /.row (main row) -->

        </section>
    </div>
{{> footer }}